{
  "ignore": ["**/*.test.ts", "**/*.spec.ts", ".git", "node_modules"],
  "watch": ["src"],
  "exec": "node --inspect-brk=9229 -r tsconfig-paths/register -r ts-node/register --enable-source-maps ./src/server.ts",
  "ext": "ts, js",
  "env": {
    "TS_NODE_COMPILER_OPTIONS": "{\"sourceMap\": true, \"inlineSourceMap\": false}"
  }
}
